@model IEnumerable<AkademiKiraca.Models.newsModel>

@{
    ViewBag.Title = "News";
    Layout = "~/Areas/site/Views/Shared/Layout.cshtml";
}
<html>

<head>
   
    <link href="~/Areas/site/Content/Css/haberler.css" rel="stylesheet" />
    <link href="~/Areas/site/Content/Css/magnific-popup.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Oswald:300,400,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Oxygen:300,400,700" rel="stylesheet">


    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="~/Areas/site/Content/Js/magnificPopup.js"></script>
    <script src="~/Areas/site/Content/Js/Java.js"></script>
    <script src="~/Areas/site/Content/Js/jquery-1.11.3.min.js"></script>
    <link href="~/Areas/site/Content/Css/Anasayfa.css" rel="stylesheet" />


    <link rel="shortcut icon" href="/Areas/site/Content/img/favicon.ico" type="image/x-icon">


    <title>Akademi Kıraça</title>



</head>

<body>

    <div class="cizgi1" style="height:5px;"></div>

    <div class="altsayfaustgorsel">
        <img src="~/Areas/site/Content/img/ag30.jpg">
    </div>
    <div class="timeline">

        <a class="bc_link1" href="@Url.Action("Index","Home")">Anasayfa</a>
        <a class="bc_link2" href="@Url.Action("News","Home")">Haberler</a>
        <a class="bc_link3" href="@Url.Action("News","Home")">Haberler</a>
        <div class="timeok" style="background-image:url(/Areas/site/Content/img/ok1.jpg)"></div>

    </div>
    <div class="altbaslik">

        <h1>Haberler</h1>

    </div>
    <div class="cizgi3" style="background-color:#b2d234;"></div>
    <div class="altortagenel">
        <div class="kutulargenel">
            <div class="altsolliste">
                <ul>


                    @foreach (var item in Model)
                    {
                        <a class="hoverZoomLink" href="javascript:;" value="@item.id"><li>@item.shortTitle</li></a>
                    }

                </ul>
            </div>

            <div class="altsagicerik">



            </div>



        </div>
    </div>

</body>

</html>




<script>

    $(document).ready(function () {

        $(".hoverZoomLink").click(function () {

            var id = $(this).attr("value");

            $.ajax({
                url: '/anasayfa/Home/sentNews/' + id,

                success: function (data) {
                    $(".altsagicerik").html(data);
                }
            });
        });
    });

    $(document).ready(function () {
        $.ajax({
            url: '/anasayfa/Home/sentNews/' + @ViewBag.ilkhaber,
            success: function (data) {
                $(".altsagicerik").html(data);
            }
        });
    });
</script>

<style>
    .li {
        font-size: 12px;
        font-family: Oxygen;
        font-weight: 700;
        text-align: justify;
        margin-right: 25px;
        margin-top: 20px;
        line-height: 140%;
        color: black;
        text-decoration: none;
        list-style-type: circle;
    }
</style>