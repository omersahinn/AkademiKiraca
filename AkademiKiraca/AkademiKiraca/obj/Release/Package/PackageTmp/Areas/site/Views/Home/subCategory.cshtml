@model IEnumerable<AkademiKiraca.Models.subCategoryModel>

@{
    ViewBag.Title = "subCategory";
    Layout = "~/Areas/site/Views/Shared/Layout.cshtml";
}

<html>
<head>

   
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>Akademi Kıraça</title>
    @*<link href="~/Areas/site/Content/Css/Anasayfa.css" rel="stylesheet" />*@
    <link href="~/Areas/site/Content/Css/iletisim.css" rel="stylesheet" />
  

    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
                m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-62944812-4', 'auto');
        ga('send', 'pageview');

    </script>
    
</head>

<body>
    @ViewBag.message
    @{int t = 1; }

    @foreach (var item in Model)
    {

        if (item.position == 1)
        {

            <div class="altsayfaustgorsel">

                <img src="@item.picturePath ">
            </div>


            <div class="timeline">

                @*<a class="bc_link1" href="@Url.Action("Index","Home")">Anasayfa</a>
                <a class="bc_link2" href="@Url.Action("News","Home")">@item.categoryName</a>
                <a class="bc_link3" href="/site/Home/educatorList/@ViewBag.id">@item.subCategoryName</a>
                <div class="timeok" style="background-image:url(/Areas/site/Content/img/ok.jpg)"></div>*@

                @if (item.id == 1 || item.id == 2 || item.id == 3 || item.id == 4)
                {
                    <a class="bc_link1" href="@Url.Action("Index","Home")">Anasayfa</a>
                    <a class="bc_link2" href="@Url.Action("Index","Home")">@item.categoryName</a>
                    <a class="bc_link3" href="@Url.Action("subCategory","Home",new { id=item.id})">@item.subCategoryName</a>

                    <div class="timeok" style="background-image:url(/Areas/site/Content/img/ok.jpg)"></div>
                }
                @if (item.id == 5 || item.id == 6 || item.id == 7)
                {
                    <a class="bc_link1" href="@Url.Action("Index","Home")">Anasayfa</a>
                    <a class="bc_link2" href="@Url.Action("Index","Home")">@item.categoryName</a>
                    <a class="bc_link3" href="@Url.Action("subCategory","Home",new { id=item.id})">@item.subCategoryName</a>
                    <div class="timeok" style="background-image:url(/Areas/site/Content/img/ok2.jpg)"></div>
                }
                @if (item.id == 8 || item.id == 9 || item.id == 10 || item.id == 11 || item.id == 12 || item.id == 13)
                {
                    <a class="bc_link1" href="@Url.Action("Index","Home")">Anasayfa</a>
                    <a class="bc_link2" href="@Url.Action("Index","Home")">@item.categoryName</a>
                    <a class="bc_link3" href="@Url.Action("subCategory","Home",new { id=item.id})">@item.subCategoryName</a>
                    <div class="timeok" style="background-image:url(/Areas/site/Content/img/ok3.jpg)"></div>
                }
                @if (item.id == 14 || item.id == 15)
                {
                    <a class="bc_link1" href="@Url.Action("Index","Home")">Anasayfa</a>
                    <a class="bc_link2" href="@Url.Action("Index","Home")">@item.categoryName</a>
                    <a class="bc_link3" href="@Url.Action("subCategory","Home",new { id=item.id})">@item.subCategoryName</a>
                    <div class="timeok" style="background-image:url(/Areas/site/Content/img/ok4.jpg)"></div>
                }
                
            </div>
        }
        if (t == 1)
        {
            if (item.position == 0)
            {


                <div class="altbaslik">

                    <h1>@item.subCategoryName</h1>
                </div>




                if (item.id == 1 || item.id == 2 || item.id == 3 || item.id == 4)
                {
                    <div class="cizgi3"></div>
                }
                if (item.id == 5 || item.id == 6 || item.id == 7)
                {
                   <div class="cizgi3" style="background-color:#FF7F00"></div>
                }
                if (item.id == 8 || item.id == 9 || item.id == 10 || item.id == 11 || item.id == 12 || item.id == 13)
                {
                    <div class="cizgi3" style="background-color:#964e9e"></div>
                }
                if (item.id == 14 || item.id == 15)
                {
                    <div class="cizgi3" style="background-color:#4d5eab"></div>
                }







                <div class="altortagenel" style="height:420px;">
                    <div class="altortametin">
                        
                        @Html.Raw(item.description) @*Editörden gelen html yapıyı yazdırıyor*@


                    </div>


                    <div class="altortagorsel">

                        <img src="@item.picturePath">

                    </div>
                </div>




                if (ViewBag.catId == 4)
                {







                    <div class="altform">

                        <form name="myform" id="contact-form" method="post" action="@Url.Action("userMessage","Home")" onsubmit="return validation();">

                            @if (TempData["message"] != null)
                            {<br />
                            <br />
                                <div id="wrapper">
                                    <div id="message-sent" style="">
                                        <div id="close-button">
                                            <span>X</span>
                                        </div>
                                        <span>Mesajınız Başarıyla Gönderilmiştir</span>
                                    </div>
                                </div>

                            }

                            <div class="form1" style="width:300px">
                                <label for="fname"><p>Ad Soyad*</p></label>
                                <input type="text" id="fname" name="nameSurname" required>
                            
                                <label for="lname"><p>Telefon</p></label>
                                <input type="text" id="tlf" class="tlf" name="phone">
                              
                                <label for="lname"><p>E-Mail*</p></label>
                                <input type="text" id="email" name="email" required>
                            </div>
                            <div class="form2" style="width:400px">
                                <label for="fname"><p>Mesajınız*</p></label>
                                <textarea class="textarea" id="input-text" name="message" required></textarea>
                            </div>
                            <input onclick="myFunction()" type="submit" value="Gönder" class="btn btn-danger">
                        </form>
                    </div>

                   
                }


            }
        }



    }
</body>
</html>



<script type="text/javascript">

            $('#wrapper').click(function () {
                $(this).fadeOut('slow');               
    });
 

</script>
<style>
    #wrapper {
        width: 100%;
        height: 100%;
        position: fixed;
        top: 0;
        left: 0;
        background: rgba(0, 0, 0, .5);
        z-index: 9999;
    }

    #message-sent {
        width: 340px;
        height: 60px;
        line-height: 60px;
        text-align: center;
        position: absolute;
        top: 50%;
        left: 50%;
        margin-top: -30px;
        margin-left: -170px;
        font-weight: 600;
        border-radius: 0 16px;
        color: #191970;
        background: white;
        box-shadow: 0 0 20px 4px #0d6636;
    }

    #close-button {
        width: 18px;
        height: 18px;
        line-height: 18px;
        text-align: center;
        position: absolute;
        top: -8px;
        right: -8px;
        background: white;
        border-radius: 0 8px;
        border: 1px solid #0d6636;
        cursor: pointer;
        font-weight: 600;
    }
</style>